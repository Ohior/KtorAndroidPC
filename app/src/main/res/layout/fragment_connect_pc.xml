<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="ng.ohis.ktorandroidpc.fragments.ConnectPcFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_gif_ll"
        android:orientation="vertical"
        android:gravity="top">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/id_gif_image"
            android:src="@drawable/gifimage"
            android:layout_gravity="top"
            android:contentDescription="@string/connection_gif"/>
        <TextView
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarSize="5dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:text="@string/connect_PC_info"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_recycler_view"
        android:layout_gravity="top"
        android:visibility="gone"
        tools:listitem="@layout/explorer_item"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/id_btn_connect_layout"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_btn_connect_browser"
            android:layout_gravity="center_horizontal"
            android:text="@string/connect_PC"
            android:textAllCaps="false"
            android:layout_marginVertical="10dp"
            tools:drawableStart="@drawable/ic_computer"
            android:drawablePadding="5dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/con_btn_design"
            android:textSize="25sp"/>
<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/id_btn_connect_with_application"-->
<!--            android:text="@string/connect_with_app"-->
<!--            android:layout_marginHorizontal="10dp"-->
<!--            android:textAllCaps="false"-->
<!--            android:visibility="gone"-->
<!--            android:textSize="25sp"/>-->

    </FrameLayout>

</FrameLayout>