<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ng.ohis.ktorandroidpc.fragments.ConnectPcFragment">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:id="@+id/id_top_nav_bar"
        layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_gif_ll"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/id_gif_image"
            android:src="@drawable/gifimage"
            android:layout_gravity="top"
            android:layout_marginVertical="10dp"
            android:contentDescription="@string/connection_gif"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarSize="5dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:text="@string/connect_PC_info"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_recycler_view"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:listitem="@layout/explorer_item"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/scrollable_button"/>
</FrameLayout>