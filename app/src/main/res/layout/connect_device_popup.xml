<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:background="@drawable/connect_device_menu"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_connect_device"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="20dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:focusable="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_btn_send"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:text="@string/send"
            android:textSize="22sp"
            style="@style/Widget.MaterialComponents.Button"
            android:drawableStart="@drawable/round_qr_code_scanner_white_48"
            android:fontFamily="sans-serif-smallcaps"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_connect_device"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:focusable="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_btn_receive"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:text="@string/receive"
            android:textSize="22sp"
            style="@style/Widget.MaterialComponents.Button"
            android:drawableStart="@drawable/round_qr_code_white_48"
            android:fontFamily="sans-serif-smallcaps"/>
    </LinearLayout>

</LinearLayout>
